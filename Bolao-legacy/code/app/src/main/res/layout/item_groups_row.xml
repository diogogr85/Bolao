<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="7dp"
    android:paddingBottom="7dp"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.0"
        android:orientation="horizontal"
        android:background="@android:color/transparent">

        <ImageView
            android:id="@+id/item_groups_team_flag_imageview"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:layout_marginRight="10dp"/>

        <TextView
            android:id="@+id/item_groups_team_name_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.0"
            android:textSize="16dp"
            android:textColor="@color/colorPrimaryText"
            tools:text="ArÃ¡bia Saudita"/>

    </LinearLayout>

    <TextView
        android:id="@+id/item_groups_points_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.1"
        android:textSize="15dp"
        android:textColor="@color/colorSecondaryText"
        tools:text="0"/>

    <TextView
        android:id="@+id/item_groups_matches_played_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.1"
        android:textSize="15dp"
        android:textColor="@color/colorSecondaryText"
        tools:text="0"/>

    <TextView
        android:id="@+id/item_groups_wons_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.1"
        android:textSize="15dp"
        android:textColor="@color/colorSecondaryText"
        tools:text="0"/>

    <TextView
        android:id="@+id/item_groups_draws_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.1"
        android:textSize="15dp"
        android:textColor="@color/colorSecondaryText"
        tools:text="0"/>

    <TextView
        android:id="@+id/item_groups_losses_textview"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_weight="0.1"
        android:textSize="15dp"
        android:textColor="@color/colorSecondaryText"
        tools:text="0"/>

    <TextView
        android:id="@+id/item_groups_goal_for_textview"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/colorSecondaryText"
        tools:text="0"/>

    <TextView
        android:id="@+id/item_groups_goals_against_textview"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/colorSecondaryText"
        tools:text="0"/>

    <TextView
        android:id="@+id/item_groups_difference_textview"
        android:layout_width="27dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="15dp"
        android:textColor="@color/colorSecondaryText"
        tools:text="0"/>

</LinearLayout>